{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "jsx": "react",
    "declaration": true,
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true, // **Add this line**
    "forceConsistentCasingInFileNames": true,
    "noEmitOnError": false // **Add this line**
  },
  "include": ["src/**/*", "src/types.ts"],
  "exclude": ["node_modules", "dist"]
}
